<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:uiBehaviors="clr-namespace:MFAWPF.Extensions.UIBehaviors">

    <Style BasedOn="{StaticResource TextBoxExtend}" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{DynamicResource TransparentRegionBrush}" />
        <Setter Property="uiBehaviors:ClipboardInterceptor.EnableSafeClipboard" Value="True" />
    </Style>
    <Style BasedOn="{StaticResource TextBoxExtend}" TargetType="{x:Type hc:TextBox}">
        <Setter Property="Background" Value="{DynamicResource TransparentRegionBrush}" />
        <Setter Property="uiBehaviors:ClipboardInterceptor.EnableSafeClipboard" Value="True" />
    </Style>

</ResourceDictionary>